@model FulgurStore.Models.Category

@{
    ViewBag.Title = "Update";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row grid-margin">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Category</h4>

                        <form action="/Category/Update" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label for="cname">Category name</label>
                                    <input id="cname" class="form-control" name="Category_name" minlength="2" type="text" value="@Model.Category_name" required>
                                </div>      

                                <!--<div class="form-group">
                                    <label for="cname">Category Image</label>
                                    <input class="form-control" name="Category_image" type="file" />-->
                                    @*{{Form::file('category_image',['class'=>'form-control'])}}*@
                                <!--</div>-->
                            <div class="form-group">
                                <label for="cname">Status</label>
                                @*<label id="cname" class="badge badge-success" name="Status" value=""></label>*@
                                @if (Model.Status == true)
                                 {
                                 <label class="badge badge-success">Active</label>
                                 }
                                else
                                {
                                <label class="badge badge-danger">Unactive</label>
                                }
                            </div>
                                <input class="btn btn-primary" type="submit" value="Add Category">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
